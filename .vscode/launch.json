  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Release Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/cmake/LegitEngine.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/cmake/",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "Debug Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/cmaked/LegitEngine.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/cmaked/",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      // Resolved by CMake Tools:
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
          {
              // add the directory where our target was built to the PATHs
              // it gets resolved by CMake Tools:
              "name": "PATH",
              "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
          },
          {
              "name": "OTHER_VALUE",
              "value": "Something something"
          }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    },
    {
        "name": "(lldb) Launch cmake",
        "type": "cppdbg",
        "request": "launch",
        // Resolved by CMake Tools:
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [
            {
                // add the directory where our target was built to the PATHs
                // it gets resolved by CMake Tools:
                "name": "PATH",
                "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
            },
            {
                "name": "OTHER_VALUE",
                "value": "Something something"
            }
        ],
        "externalConsole": true,
        "MIMode": "lldb"
    }
  ]
}